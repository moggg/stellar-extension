{
  "manifest_version":2,
  "name":"Stellar (XLM) Price Tracker",
  "short_name": "Stellar (XLM) Tracker",
  "description":"Price tracker for Stellar (XLM) - gathers price data using the coinmarketcap API",
  "options_page": "options.html",
  "version":"1.0",
  "background":{
    "page":"background.html"
  },
  "browser_action":{
    "default_icon":"icons/icon.png"
  },
  "icons":{
    "128":"icons/icon.png"
  },
  "web_accessible_resources":[
    "icons/icon.png"
  ],

  "permissions":[
    "background",
    "storage",
    "https://api.coinmarketcap.com/"
  ]
}
